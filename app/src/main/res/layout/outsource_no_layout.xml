<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    android:orientation="vertical">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <com.example.mumu.warehousecheckcar.view.FixedEditText
        android:id="@+id/fixeedittext1"
        style="@style/edit_style2"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="27dp"
        android:hint="PO:"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true" />

    <com.example.mumu.warehousecheckcar.view.FixedEditText
        android:id="@+id/fixeedittext2"
        style="@style/edit_style2"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="27dp"
        android:hint="送货单号"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/button2"
            style="@style/button_style1"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/home_margin"
            android:text="@string/button_find" />
    </LinearLayout>
</LinearLayout>
