<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    android:orientation="vertical">

    <com.example.mumu.warehousecheckcar.view.FixedEditText
        android:id="@+id/fixeedittext1"
        style="@style/edit_style2"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="27dp"
        android:hint="快递单号"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/headNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <View style="@style/view_line" />

        <TextView
            android:id="@+id/text1"
            style="@style/text_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="申请单号" />

        <View style="@style/view_line" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbutton"
        style="@style/view_border"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:scaleType="center"
        android:src="@mipmap/plus_circle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:animateLayoutChanges="false"
        android:focusableInTouchMode="true" />

    <View style="@style/view_item_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">

        <Button
            android:id="@+id/button2"
            style="@style/button_style1"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/home_margin"
            android:text="上传" />
    </LinearLayout>
</LinearLayout>
