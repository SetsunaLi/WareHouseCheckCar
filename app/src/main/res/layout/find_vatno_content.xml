<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    android:orientation="vertical">
<!--
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_padding">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描数量：" />

                <TextView
                    android:id="@+id/text2"
                    style="@style/text_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left|center_vertical"
                    android:text="0" />

                <TextView
                    style="@style/text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询数量：" />

                <TextView
                    android:id="@+id/text3"
                    style="@style/text_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left|center_vertical"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ERP查询数量：" />

                <TextView
                    android:id="@+id/text4"
                    style="@style/text_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left|center_vertical"
                    android:text="0" />


            </LinearLayout>

            <View style="@style/view_item_bottom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    style="@style/button_style1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/home_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:layout_weight="1"
                    android:text="清空" />

                <Button
                    android:id="@+id/button1"
                    style="@style/button_style1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/home_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:layout_weight="1"
                    android:text="刷新" />


                <Button
                    android:id="@+id/button2"
                    style="@style/button_style1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/home_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:layout_weight="1"
                    android:text="功率" />

            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->
</android.support.constraint.ConstraintLayout>